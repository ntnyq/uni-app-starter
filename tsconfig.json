{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "@dcloudio/types", "@uni-helper/uni-ui-types", "wot-design-uni/global.d.ts"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "target": 3
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./scripts/**/*.ts",
    "./plugins/**/*.ts",
    "./*.config.*"
  ]
}
