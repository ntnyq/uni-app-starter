{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "@dcloudio/types", "@uni-helper/uni-ui-types", "wot-design-uni/global.d.ts"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "target": 3,
    "plugins": ["@uni-helper/uni-app-types/volar-plugin"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./scripts/**/*.ts",
    "./plugins/**/*.ts",
    "./*.config.*"
  ],
  "exclude": ["dist", "node_modules"]
}
