{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "@dcloudio/types",
      "@uni-helper/uni-ui-types",
      "wot-design-uni/global.d.ts"
    ],
    "resolveJsonModule": true,
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./scripts/**/*.ts",
    "./plugins/**/*.ts",
    "./*.config.*"
  ],
  "exclude": ["dist", "node_modules"],
  "vueCompilerOptions": {
    "plugins": ["@uni-helper/uni-app-types/volar-plugin"],
    "target": 3
  }
}
