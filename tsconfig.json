{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "@uni-helper/uni-ui-types", "@dcloudio/types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "target": 3,
    "nativeTags": ["block", "template", "component", "slot"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "./scripts/**/*.ts", "./*.config.*"]
}
